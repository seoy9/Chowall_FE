                    <EditText
                        android:id="@+id/ed_pw_check_regis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15.3"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/opensans_bold"
