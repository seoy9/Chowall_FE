                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/imgEmailBottom"
                        app:layout_constraintEnd_toStartOf="@+id/editTwRightRegis"
                        app:layout_constraintStart_toStartOf="@+id/editTwLeftRegis"
