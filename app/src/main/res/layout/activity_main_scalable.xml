<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempMainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/guideline53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/toolbar_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.56754714" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar_bottom">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_height="2256"
                    app:scale_base_width="1440">

                    <TextView
                        android:id="@+id/tv_slogan_main"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:bufferType="spannable"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="top"
                        android:text="@string/chowall_slogan"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        app:scale_height="176"
                        app:scale_left="96"
                        app:scale_textsize="64"
                        app:scale_top="144"
                        app:scale_width="624" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:scale_height="160"
                        app:scale_left="80"
                        app:scale_top="384"
                        app:scale_width="1280"
                        app:srcCompat="@drawable/dark_gray_round_box" />

                    <EditText
                        android:id="@+id/ed_search_main"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/opensans_bold"
                        android:hint="@string/main_search_hint"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/hintColor"
                        app:scale_height="64"
                        app:scale_left="168"
                        app:scale_textsize="48"
                        app:scale_top="432"
                        app:scale_width="784" />

                    <ImageButton
                        android:id="@+id/btn_search"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/search_icon"
                        app:scale_height="60"
                        app:scale_left="1218"
                        app:scale_top="434"
                        app:scale_width="60" />

                    <ImageButton
                        android:id="@+id/btn_recommend"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_recommend"
                        app:scale_height="768"
                        app:scale_left="80"
                        app:scale_top="656"
                        app:scale_width="608" />

                    <ImageButton
                        android:id="@+id/btn_make_course"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_make_course"
                        app:scale_height="768"
                        app:scale_left="752"
                        app:scale_top="656"
                        app:scale_width="608" />

                    <ImageButton
                        android:id="@+id/btn_report"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_report"
                        app:scale_height="768"
                        app:scale_left="80"
                        app:scale_top="1488"
                        app:scale_width="608" />

                    <ImageButton
                        android:id="@+id/btn_reservation"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_reservation"
                        app:scale_height="768"
                        app:scale_left="752"
                        app:scale_top="1488"
                        app:scale_width="608" />

                </com.ssomai.android.scalablelayout.ScalableLayout>
            </FrameLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58415097" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7699849" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline93">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_height="738"
                    app:scale_base_width="1440">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/main_recommend_course"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        app:scale_height="88"
                        app:scale_left="112"
                        app:scale_textsize="64"
                        app:scale_width="524" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#E6E6E6"
                        app:scale_height="12"
                        app:scale_left="0"
                        app:scale_top="177"
                        app:scale_width="1440" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recommend_course"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:overScrollMode="never"
                        app:scale_height="496"
                        app:scale_left="72"
                        app:scale_top="243"
                        app:scale_width="1296" />

                </com.ssomai.android.scalablelayout.ScalableLayout>

            </FrameLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7878104" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9728302" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1.0" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline99"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline98">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scale_base_height="738"
                    app:scale_base_width="1440">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/main_popular_course"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        app:scale_height="88"
                        app:scale_left="112"
                        app:scale_textsize="64"
                        app:scale_width="524" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#E6E6E6"
                        app:scale_height="12"
                        app:scale_left="0"
                        app:scale_top="177"
                        app:scale_width="1440" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_popular_course"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:overScrollMode="never"
                        app:scale_height="496"
                        app:scale_left="72"
                        app:scale_top="243"
                        app:scale_width="1296" />

                </com.ssomai.android.scalablelayout.ScalableLayout>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.062196307" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8969874" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.020408163"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.048590865"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41666666"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5833333"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/img_logo_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline69"
        app:layout_constraintEnd_toStartOf="@+id/guideline71"
        app:layout_constraintStart_toStartOf="@+id/guideline70"
        app:layout_constraintTop_toTopOf="@+id/guideline68"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/chowall_logo" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bottom_nav"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconSize="55dp"
        app:itemPaddingBottom="24dp"
        app:itemPaddingTop="12dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline53"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_menu" />



</androidx.constraintlayout.widget.ConstraintLayout>