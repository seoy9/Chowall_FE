<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_box"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:cardCornerRadius="9.23dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2272"
                android:background="@color/main"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="@string/info_title"
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="15sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13.0360"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25.2580"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.7873"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_runway" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_runway"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_runway"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.3623"
                                    android:background="@color/info_btn_txt_color"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_restroom" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_restroom"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_restroom"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.3623"
                                    android:background="@color/info_btn_txt_color"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_parking" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_parking"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_parking"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.3623"
                                    android:background="@color/info_btn_txt_color"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_lift" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_lift"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_lift"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.3623"
                                    android:background="@color/info_btn_txt_color"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_companion" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_companion"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_companion"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.3623"
                                    android:background="@color/info_btn_txt_color"
                                    android:orientation="horizontal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.5"
                                android:orientation="vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.7777"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.7262"
                                android:adjustViewBounds="true"
                                android:background="@color/cardview_shadow_end_color"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/icon_rental" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <TextView
                                android:id="@+id/tv_info_rental"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.8565"
                                android:bufferType="spannable"
                                android:fontFamily="@font/pretendard_semibold"
                                android:gravity="center"
                                android:text="@string/info_rental"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                app:autoSizeMaxTextSize="15.5sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0361"
                        android:orientation="horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4961"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_info_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/info_btn_txt"
                    android:textColor="@color/info_btn_txt_color"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>